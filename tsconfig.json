{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "strict": true,
    "target": "ES2022",
    "removeComments": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}
